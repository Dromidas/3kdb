#class {player_aliases} {kill}
#class {player_aliases} {open}

#alias {_player_deadmanActions} {
    .pause;
} {1};

#alias {corpse_trig} {
    gt-repair;
    fuse 500;
    #if {&genbuddy[] >0} {
        #foreach $genbuddy buddy {
            gt-repair $buddy;
        };
    };
};

#alias k {
    gt-repair;
    kill %0;
};

#alias .mob_kill_action {
    kill $mob[target];
    #if $darkness {extinguish torch};
};

#class {player_aliases} {close}